<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN IN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="40sp"
        android:textColor="#000000"

        />

    <EditText
        android:id="@+id/ed_username"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="user name Or email"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@id/tv_login"
        app:layout_constraintStart_toStartOf="@id/tv_login"

        app:layout_constraintTop_toBottomOf="@id/tv_login" />

    <EditText
        android:id="@+id/ed_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="password"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@id/tv_login"
        app:layout_constraintStart_toStartOf="@id/tv_login"


        app:layout_constraintTop_toBottomOf="@id/ed_username" />
    <Button
        android:id="@+id/bt_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/ed_password"
        app:layout_constraintEnd_toEndOf="@id/ed_password"
        app:layout_constraintTop_toBottomOf="@id/ed_password"
        android:text="ok"/>
    <TextView
        android:id="@+id/tv_backNewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/bt_ok"
        app:layout_constraintBottom_toBottomOf="@id/bt_ok"
        app:layout_constraintTop_toTopOf="@id/bt_ok"
        android:text="new Register"
        />

</androidx.constraintlayout.widget.ConstraintLayout>